@model mvcCoreETicaret.Northwind.MvcWebUI.Models.ProductAddViewModel

@{
    ViewBag.Title = "Yeni Ürün Ekle";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Yeni Ürün Ekle</h2>
<form asp-controller="Admin" asp-action="Add" method="post">
   <div class="form-group">
       <label>Ürün Adı:</label>
       <input asp-for="Product.ProductName"  class="form-control" placeholder="Ürün Adını Giriniz."/>
       <span asp-validation-for="Product.ProductName"></span>
   </div>
    <div class="form-group">
        <label>Kategori Adı:</label>
        <select asp-for="Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))" ></select>
        <span asp-validation-for="Product.CategoryId"></span>
    </div>
    <div class="form-group">
        <label>Birim Fiyatı:</label>
        <input asp-for="Product.UnitPrice" class="form-control" placeholder="Birim Fiyatı Giriniz." />
        <span asp-validation-for="Product.UnitPrice"></span>
    </div>
    <div class="form-group">
        <label>Stok Adedi:</label>
        <input asp-for="Product.UnitsInStock" class="form-control" placeholder="Stok Adedini Giriniz." />
        <span asp-validation-for="Product.UnitsInStock"></span>
        <input type="submit" value="Add" class="btn btn-xs btn-success"/>
    </div>
</form>

