@using System.Threading.Tasks
@model mvcCoreETicaret.Northwind.MvcWebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "Kayıt ol";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="container">
    <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Üye Ol</div>
                <div style="float:right; font-size: 85%; position: relative; top:-10px"><a asp-controller="Account" asp-action="Login">Giriş Yap</a></div>
            </div>
            <div class="panel-body">
                <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-md-3 control-label"> Kullanıcı Adı:</label>
                        <div class="col-md-9">
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Kullancı Adı">
                            <span asp-validation-for="UserName"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="col-md-3 control-label">Şifre:</label>
                        <div class="col-md-9">
                            <input asp-for="Password" class="form-control" placeholder="Şifre">
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Email:</label>
                        <div class="col-md-9">
                            <input asp-for="Email" class="form-control" placeholder="Email Adresi">
                            <span asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-info" value="Kaydet"><i class="icon-hand-right"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
